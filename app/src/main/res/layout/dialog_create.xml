<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_20"
        android:src="@drawable/cancel"/>
    <LinearLayout
        android:layout_below="@+id/iv_cancel"
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">
        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"
            android:background="@color/lineColor"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1"/>
        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"
            android:background="@color/lineColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_top"
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_150"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15">
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_15"
            android:background="@color/lineColor"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_15"
            android:background="@color/lineColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_top"
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_150"
        android:orientation="vertical"
        android:layout_alignEnd="@+id/ll_top">
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_15"
            android:background="@color/lineColor"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_15"
            android:background="@color/lineColor"/>
    </LinearLayout>
    <EditText
        android:layout_below="@+id/ll_top"
        android:layout_above="@+id/ll_bottom"
        android:id="@+id/ret_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:background="@null"
        android:textCursorDrawable="@drawable/cursor_shape"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_5"
        android:layout_alignEnd="@+id/ll_right"
        android:layout_alignStart="@id/ll_left"/>
    <LinearLayout
        android:layout_below="@+id/ll_left"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">
        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"
            android:background="@color/lineColor"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1"/>
        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"
            android:background="@color/lineColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:scaleType="centerCrop"
            android:src="@drawable/right"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:scaleType="centerCrop"
            android:src="@drawable/right"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:text="@string/tv_submit"
            android:textSize="@dimen/sp_20"
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:scaleType="centerCrop"
            android:src="@drawable/left"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:scaleType="centerCrop"
            android:src="@drawable/left"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>